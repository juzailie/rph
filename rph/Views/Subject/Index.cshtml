@{
    ViewBag.Title = "Subjects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Subjects</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">
        <p>
            @*<button type="button" class="btn btn-primary">Add Subject</button>*@
            <a href="/Subject/Form" class="btn btn-primary">Add Subject</a>
        </p>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="example">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Code</th>
                                <th>Created On</th>
                                <th>Created By</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Code</th>
                                <th>Created On</th>
                                <th>Created By</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<script type="text/javascript">
    $(document).ready(function () {

        $('#example').DataTable({
            "processing": true,
            "serverSide": true,
            "ajax": {
                url: "api/subject/GetData",
                type: 'POST'
            },
            "columns": [
                { "data": "Name" },
                { "data": "Code" },
                { "data": "CreatedOn" },
                { "data": "CreatedBy" }
            ],
            "language": {
                "emptyTable": "There are no customers at present.",
                "zeroRecords": "There were no matching customers found.",
                "search": "",
                "searchPlaceholder": "Search..."
            }
        });

    });
</script>